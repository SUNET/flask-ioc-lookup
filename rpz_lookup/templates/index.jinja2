<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/bootstrap.min.css') }}" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T">
    <meta charset="UTF-8">
    <title>RPZ domain lookup</title>
</head>
<body>
<div class="container">
    <h3 class="pt-3">RPZ domain lookup</h3>
    <p class="float-right">Logged in as: {{ user.identifier }}</p>
    <form method="post">
      <div class="form-group">
        <label for="inputDomain1">Domain name search</label>
        <input type="text" class="form-control {% if error %}is-invalid{% endif %}" id="inputDomain1" name="domain_name" aria-describedby="domainNameHelp" placeholder="Search for domain name">
        <div class="invalid-feedback">
          {{ error }}
        </div>
        <small id="domainHelp" class="form-text text-muted">Enter a FQDN ex. host.example.com</small>
      </div>
      <button type="submit" class="btn btn-primary">Search</button>
    </form>
    {% if result is defined %}
        <h4 class="pt-3">Result for {{ original_domain_name }}</h4>
        {% if parent_domain_name %}
            <small id="resultHelp" class="text-muted">No result for {{ original_domain_name }} found, showing result for {{ parent_domain_name }}.</small>
        {% endif %}
        <div class="card bg-light">
            <div class="card-body">
                {% for item in result %}
                    <pre><a href="{{ misp_url }}events/view/{{ item.event_id }}">MISP event {{ item.event_id }}</a> | {{ item.timestamp|ts }} | {{ item.value }} | {{ item.comment }} | Sightings: {{ item.positives }} | False-positives: {{ item.negatives }}</pre>
                    {% if loop.last %}
                        <pre>Note: Event links requires access to MISP.</pre>
                    {% endif %}
                {% else %}
                    <pre>No data</pre>
                {% endfor %}
            </div>
        </div
        {% if original_domain_name is defined %}>

            <div class="row mt-1">
                <div class="col">
                <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                    <div class="btn-group mr-2" role="group">
                    <form class="form-inline" action="{{ url_for('report_sighting') }}" method="post">
                        <input type="hidden" name="domain_name" value="{{ original_domain_name }}" />
                        <input type="hidden" name="type" value="0" />
                        <button class="btn btn-success" type="submit" {% if not user.in_trusted_org %}disabled{% endif %}>Sighting</button>
                    </form>
                    </div>
                    <div class="btn-group mr-2" role="group">
                    <form class="form-inline" action="{{ url_for('report_sighting') }}" method="post">
                        <input type="hidden" name="domain_name" value="{{ original_domain_name }}" />
                        <input type="hidden" name="type" value="1" />
                        <button class="btn btn-danger" type="submit" {% if not user.in_trusted_org %}disabled{% endif %}>False-positive</button>
                    </form>
                    </div>
                </div>

            </div>
            </div>
        {% endif %}
        {% if parent_domain_name or not result %}
            <hr>
            <h6>Report domain</h6>
            <form class="form-inline" action="{{ url_for('report') }}" method="post">
              <div class="form-group mb-2">
                <label for="inputDomains1" class="sr-only">Domain</label>
                <input type="text" readonly class="form-control" id="inputDomains1" name="domain_names" value="{{ original_domain_name }}">
              </div>
              <div class="form-group mx-sm-3 mb-2">
                <label for="inputReference1" class="sr-only">Reference</label>
                <input type="text" class="form-control" id="inputReference1"
                       name="reference" aria-describedby="referenceHelp" placeholder="Enter reference (Optional)">
              </div>
              <button type="submit" class="btn btn-primary mb-2">Report</button>
            </form>
        {% endif %}
    {% endif %}
    <hr>
    <p>If you want to report multiple domains, use the <a href="{{ url_for('report') }}">bulk report form</a>.</p>
</div>
</body>
</html>
